{
  "name": "digital-paper-edit-cep",
  "version": "1.0.0",
  "description": "Adobe CEP (Common Extensibility Platform) Panel - Premiere Plugin",
  "main": "index.js",
  "directories": {
    "lib": "lib"
  },
  "engineStrict": true,
  "engines": {
    "node": "11.15.0",
    "npm": "6.7.0"
  },
  "scripts": {
    "adobe-panel-dev-lib": "sync-files lib ~/Library/Application\\ Support/Adobe/CEP/extensions/dpe-panel",
    "adobe-panel-dev-packagejson": "sync-files ./package.json ~/Library/Application\\ Support/Adobe/CEP/extensions/dpe-panel/package.json",
    "adobe-panel-dev-node_modules": "sync-files node_modules ~/Library/Application\\ Support/Adobe/CEP/extensions/dpe-panel/node_modules",
    "adobe-panel-dev-src": "sync-files src ~/Library/Application\\ Support/Adobe/CEP/extensions/dpe-panel/src",
    "adobe-panel-dev-debug": "sync-files .debug ~/Library/Application\\ Support/Adobe/CEP/extensions/dpe-panel/.debug",
    "adobe-panel-dev": "npm run adobe-panel-dev-lib && npm run adobe-panel-dev-node_modules && npm run adobe-panel-dev-packagejson && npm run adobe-panel-dev-src && npm run adobe-panel-dev-debug",
    "test": "echo \"Error: no test specified\" && exit 1",
    "adobe-panel-dev-electron": "sync-files electron ~/Library/Application\\ Support/Adobe/CEP/extensions/dpe-panel/electron",
    "adobe-panel-dev:watch": "onchange ./lib/** ./package.json ./electron/** ./adobe-panel-src/** -e ./electron/app.js -- npm run adobe-panel-dev",
    "adobe-panel-build": "sync-files adobe-panel-src adobe-panel-build && sync-files electron adobe-panel-build/electron && sync-files lib adobe-panel-build/lib &&  sync-files ./package.json adobe-panel-build/package.json && sync-files node_modules  adobe-panel-build/node_modules",
    "adobe-panel-package-sign-build": "node ./scripts/sign-and-package-adobe-panel.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pietrop/digital-paper-edit-cep.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pietrop/digital-paper-edit-cep/issues"
  },
  "homepage": "https://github.com/pietrop/digital-paper-edit-cep#readme",
  "devDependencies": {
    "dotenv": "^8.2.0",
    "electron": "^8.0.0",
    "onchange": "^6.1.0",
    "sync-files": "^1.0.3"
  },
  "dependencies": {
    "@pietrop/digital-paper-edit-client": "^1.3.3-alpha.9",
    "assemblyai": "^1.0.1",
    "bootstrap-css-only": "^4.3.1",
    "deepspeech-node-wrapper": "^1.0.6",
    "diskdb": "^0.1.17",
    "electron-updater": "^4.1.2",
    "ffmpeg-static-electron": "^2.0.1",
    "ffprobe-static-electron": "^2.0.0",
    "fluent-ffmpeg": "^2.1.2",
    "react": "^16.11.0",
    "react-bootstrap": "^1.0.0-beta.14",
    "react-dom": "^16.10.2"
  }
}
